# FastAPI Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/smartgriev_db
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/smartgriev
DATABASE_TYPE=postgresql

# Firebase Configuration (for Authentication)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=your-email@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_CERT_URL=your-cert-url

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/NLP Configuration
NLP_MODEL=bert
TF_IDF_MIN_DF=2
TF_IDF_MAX_DF=0.95
SIMILARITY_THRESHOLD=0.75
MAX_GRIEVANCE_LENGTH=5000

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@smartgriev.com
SENDGRID_FROM_NAME=Smart Griev

# Cloud Storage Configuration
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET_NAME=smartgriev-attachments
AWS_REGION=us-east-1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=smartgriev-attachments

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Officer Assignment Rules
DEFAULT_RESPONSE_TIME_HOURS=48
ESCALATION_TIME_HOURS=72

# Logging
LOG_FILE=logs/app.log
